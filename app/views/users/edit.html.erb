<% provide(:title, "Edit profile") %>
<h1>Update profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password, "Enter Password" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>


      <% if admin?(current_user) %>
        <%= f.label :admin, "Give admin privileges?" %>
         <%= f.check_box :admin %><br>
      <% end %>

      <%= f.label :email_frequency, "Email Frequency Preferences" %>
      <%= f.select :email_frequency, options_for_select([['Individual', :individual], ['Daily', :daily]]) %><br>


      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>