source 'https://rubygems.org'

# Core
gem 'rails', '4.0.8'

# Authorization
gem 'sprockets', '2.11.0'
gem 'bcrypt-ruby', '3.1.2'

group :development, :test do
	gem 'sqlite3', '1.3.8'
	gem 'rspec-rails', '2.13.1'
	gem 'factory_girl_rails', '4.2.0'
end

group :test do
	gem 'selenium-webdriver', '2.35.1'
	gem 'capybara', '2.1.0'
end

# Front-end
gem 'sass-rails', '4.0.1'
